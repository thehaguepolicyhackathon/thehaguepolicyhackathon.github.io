---
import clsx from "clsx/lite";

type Props = {
    className?: string;
    size?: "default" | "large";
}

const { size = "default", className } = Astro.props;
---

<h3
    class={clsx(
        "text-white font-bold text-balance leading-tight",
        size === "default" && "text-2xl md:text-3xl xl:text-4xl tracking-tight",
        size === "large" && "text-4xl md:text-5xl lg:text-6xl tracking-tight",
        className,
    )}
>
    <slot />
</h3>