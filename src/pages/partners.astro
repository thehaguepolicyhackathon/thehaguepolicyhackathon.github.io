---
import { Image } from "astro:assets";
import H1 from "../components/h1.astro";
import InfoLayout from "../layouts/InfoLayout.astro";

import theaLogo from "../assets/partners/THEA.png";
import dpinLogo from "../assets/DPIN-white.png";

const LOOKING_FOR_PARTNERS = "We're looking for partners in this category. Interested in supporting the hackathon? Get in touch with us.";
---

<InfoLayout>
	<div class="p-4 sm:pt-8 sm:px-12 pb-20 min-h-dvh">
		<H1>Partners</H1>

		<!-- An event by + Made possible by (horizontal, headings aligned) -->
		<div class="mt-8 sm:mt-12 grid grid-cols-1 md:grid-cols-2 gap-x-12 gap-y-0 md:items-start">
			<!-- An event by -->
			<div>
				<h2 class="text-2xl font-semibold text-zinc-100 mb-6">An event by</h2>
				<ul class="grid grid-cols-1 lg:grid-cols-2 gap-0">
					<li class="flex items-center justify-center w-28 h-28">
						<a
							href="https://dpi.network/"
							target="_blank"
							rel="noopener noreferrer"
							class="flex items-center justify-center w-full h-full transition-opacity hover:opacity-90 focus:outline-none focus:ring-2 focus:ring-zinc-100/30 rounded"
						>
							<Image
								src={dpinLogo}
								alt="Data for Public Impact Network (DPIN)"
								class="max-h-full max-w-full w-auto object-contain"
							/>
						</a>
					</li>
					<li class="flex items-center justify-center w-32 h-32">
						<a
							href="https://www.thehagueea.org/"
							target="_blank"
							rel="noopener noreferrer"
							class="flex items-center justify-center w-full h-full transition-opacity hover:opacity-90 focus:outline-none focus:ring-2 focus:ring-zinc-100/30 rounded"
						>
							<Image
								src={theaLogo}
								alt="The Hague Effective Altruism (THEA)"
								class="max-h-full max-w-full w-auto object-contain"
							/>
						</a>
					</li>
				</ul>
			</div>

		<!-- Made possible by (same row as An event by, heading aligned) -->
		<div>
			<h2 class="text-2xl font-semibold text-zinc-100 mb-6">Made possible by</h2>
			<ul class="grid grid-cols-1 lg:grid-cols-2 gap-8">
				<li>
					<p class="text-sm text-zinc-400 text-balance">{LOOKING_FOR_PARTNERS}</p>
				</li>
			</ul>
		</div>
		</div>

		<!-- Case partners -->
		<div class="mt-12 sm:mt-16">
			<h2 class="text-2xl font-semibold text-zinc-100 mb-6">Case partners</h2>
			<ul class="grid grid-cols-1 lg:grid-cols-2 gap-8">
				<li>
					<p class="text-sm text-zinc-400 text-balance">{LOOKING_FOR_PARTNERS}</p>
				</li>
			</ul>
		</div>

		<!-- Community partners -->
		<div class="mt-12 sm:mt-16">
			<h2 class="text-2xl font-semibold text-zinc-100 mb-6">Community partners</h2>
			<ul class="grid grid-cols-1 lg:grid-cols-2 gap-8">
				<li>
					<p class="text-sm text-zinc-400 text-balance">{LOOKING_FOR_PARTNERS}</p>
				</li>
			</ul>
		</div>
		<br>
	</div>
</InfoLayout>
