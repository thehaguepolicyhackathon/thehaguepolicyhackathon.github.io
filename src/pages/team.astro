const coOrganizers = [
     {
          name: "Xuelong Fu",
          affiliation: "DPIN | University of Cambridge",
          bio: "Bio",
          photo: xuelong_photo,
          linkedin: "https://www.linkedin.com/in/xuelong-f-4203a3216/"
     },
     {
          name: "Diego van der Mast",
          affiliation: "DPIN | University of Amsterdam",
          bio: "Bio",
          photo: diego_photo,
